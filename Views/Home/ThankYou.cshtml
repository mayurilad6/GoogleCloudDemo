@model HCIHelp.Models.ThankYouModel

@{
    ViewBag.Title = "Thank You";
    Layout = "~/Views/Shared/_Layout.cshtml";


    <link href="https://fonts.googleapis.com/css?family=Asap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

}
<script type="text/javascript">
   
    var IsEligible = '@ViewBag.isEligibleImage';

    if(IsEligible == "False"){
      var result = confirm("The image that you’ve provided does not align with the context of the tweet, thus rendering it unsuitable for inclusion in the message.");
    if (result) {
        // User clicked 'OK' - stay on page.
    } else {
       window.location.href = '/';
    }
    }
</script>
   

<div class="jumbotron text-center">
    <h1 class="display-4">Thank You!</h1>
    <p class="lead">Your form has been successfully submitted.</p>
    <hr class="my-4">

    @if (Model.complaintClassification != "")
    {
        <p>We have classified your complaint under the category: <b> @Model.complaintClassification </b> </p>
    }

    @if(Model.complaintClassification == "customer service")
    {
        <p>Our dedicated team will initiate contact with you via the provided email address, subsequently guiding you through the forthcoming steps..</p>
    }

    @if (Model.embededTweetString != "")
    {
        <p>
            Thank you for your submission. Our team has prepared a catchy tweet to highlight your issue.
            We are committed to diligently working on increasing the coverage of your concern.
            Your voice matters to us, and we appreciate your patience and trust in our team.
        </p>
        <p>Please review the tweet as below</p>
        <p></p>




        <div class="tweet-wrap">
            <div class="tweet-header">
               
                <div class="tweet-header-info">
                   
                    <p style="width: 390px; word-wrap: break-word;">@Model.embededTweetString</p>
                </div>

            </div>

            @if (Model.isEligibleImage)
            {
                <div class="tweet-img-wrap">

                    <p><img src="@Url.Content(Model.imageSource)" alt="My Image" /></p>
                </div>
            }

            <div class="tweet-info-counts">

                <div class="comments">

                    <svg class="feather feather-message-circle sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                    <div class="comment-count">33</div>
                </div>

                <div class="retweets">
                    <svg class="feather feather-repeat sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="17 1 21 5 17 9"></polyline><path d="M3 11V9a4 4 0 0 1 4-4h14"></path><polyline points="7 23 3 19 7 15"></polyline><path d="M21 13v2a4 4 0 0 1-4 4H3"></path></svg>
                    <div class="retweet-count">397</div>
                </div>

                <div class="likes">
                    <svg class="feather feather-heart sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>
                    <div class="likes-count">
                        2.6k
                    </div>
                </div>

                <div class="message">
                    <svg class="feather feather-send sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
                </div>
            </div>
        </div>

    }
    else
    {
        <p>Our team will review your submission and get back to you soon.</p>
    }




    <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Home")" role="button">Return Home</a>
</div>
